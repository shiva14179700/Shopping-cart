<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
        crossorigin="anonymous">
    <link rel="stylesheet" href="/public/css/sidemenu.css">
    <link rel="stylesheet" href="/public/css/address.css">
    <link rel="stylesheet" href="/public/css/addressForm.css">
    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
        crossorigin="anonymous"></script>
    <title>Address</title>
</head>

<body>
    <% include partials/nav.ejs %>
    <div id="container">
        <h1 class="logo">Add a new Address to proceed</h1>
        <div id="form-box">
            <i id="prev-btn" class="fas fa-arrow-left"></i>
            <i id="next-btn" class="fas fa-arrow-right"></i>
            <div id="input-group">
                <input id="input-field" required>
                <label id="input-label"></label>
                <div id="input-progress"></div>
            </div>
            <div id="progress-bar"></div>
        </div>
    </div>

    <main id="about">
        <h1 class="logo">select one of the Address to proceed</h1>
        <% for(var i=0;i<addresses.length;i+=6) {%>
        <div class="projects">
            <% if(i<addresses.length) { %>
            <div class="item">
                <a class="btn-dark">
                    Billing Address
                </a>
                <a href="/orders/addorder?id=<%= productid %>&addressid=<%= addresses[i].id %>&from=<%= from %>" class="btn-light">
                    <%= addresses[i].user.name %>,
                    <%= addresses[i].user.email %>,
                    <%= addresses[i].address %>,
                    <%= addresses[i].pincode %>,
                    <%= addresses[i].city %>,
                    <%= addresses[i].state %>
                </a>
            </div>
            <% }%>
            <% if(i+1<addresses.length) { %>
            <div class="item">
                <a class="btn-dark">
                    Billing Address
                </a>
                <a href="/orders/addorder?id=<%= productid %>&addressid=<%= addresses[i+1].id %>&from=<%= from %>"
                    class="btn-light">
                    <%= addresses[i+1].user.name %>,
                    <%= addresses[i+1].user.email %>,
                    <%= addresses[i+1].address %>,
                    <%= addresses[i+1].pincode %>,
                    <%= addresses[i+1].city %>,
                    <%= addresses[i+1].state %>
                </a>
            </div>
            <% }%>

            <% if(i+2<addresses.length) { %>
            <div class="item">
                <a class="btn-dark">
                    Billing Address
                </a>
                <a href="/orders/addorder?id=<%= productid %>&addressid=<%= addresses[i+2].id %>&from=<%= from %>"
                    class="btn-light">
                    <%= addresses[i+2].user.name %>,
                    <%= addresses[i+2].user.email %>,
                    <%= addresses[i+2].address %>,
                    <%= addresses[i+2].pincode %>,
                    <%= addresses[i+2].city %>,
                    <%= addresses[i+2].state %>
                </a>
            </div>
            <% }%>

            <% if(i+3<addresses.length) { %>
            <div class="item">
                <a class="btn-dark">
                    Billing Address
                </a>
                <a href="/orders/addorder?id=<%= productid %>&addressid=<%= addresses[i+3].id %>&from=<%= from %>"
                    class="btn-light">
                    <%= addresses[i+3].user.name %>,
                    <%= addresses[i+3].user.email %>,
                    <%= addresses[i+3].address %>,
                    <%= addresses[i+3].pincode %>,
                    <%= addresses[i+3].city %>,
                    <%= addresses[i+3].state %>
                </a>
            </div>
            <% }%>
        </div>
        <% }%>
    </main>
    <% include partials/footer.ejs %>

    <script src="/public/js/addressForm.js"></script>
</body>

</html>